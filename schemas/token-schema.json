{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Token Schema",
  "type": "object",
  "properties": {
    "fontSize": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["fontSizes"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "shadows": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["shadow"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "fontFamily": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["fontFamilies"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "fontWeight": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-]+$": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string", "enum": ["fontWeights"] }
              },
              "required": ["value", "type"]
            }
          },
          "additionalProperties": false
        }
      }
    },
    "lineHeight": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["dimension"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "letterSpacing": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["letterSpacing"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "colors": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string", "enum": ["color"] }
              },
              "anyOf": [
                { "required": ["value", "type"] },
                {
                  "patternProperties": {
                    "^(dark|light)$": {
                      "type": "object",
                      "properties": {
                        "value": { "type": "string" },
                        "type": { "type": "string", "enum": ["color"] }
                      },
                      "required": ["value", "type"]
                    }
                  }
                }
              ]
            }
          }
        }
      }
    },
    "background": {
      "type": "object",
      "properties": {
        "blur": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["dimension"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "buttonDisabled": {
      "type": "object",
      "properties": {
        "value": { "type": "string" },
        "type": { "type": "string", "enum": ["opacity"] }
      },
      "required": ["value", "type"]
    },
    "size": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["dimension"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "spacing": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["dimension"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "border": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["dimension"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "borderWidth": {
      "type": "object",
      "properties": {
        "value": { "type": "string" },
        "type": { "type": "string", "enum": ["dimension"] }
      },
      "required": ["value", "type"]
    },
    "sizing": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "type": { "type": "string", "enum": ["dimension"] }
          },
          "required": ["value", "type"]
        }
      }
    },
    "input": {
      "type": "object",
      "properties": {
        "border": {
          "type": "object",
          "properties": {
            "color": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "object",
                  "properties": {
                    "color": { "type": "string" },
                    "width": { "type": "string" },
                    "style": { "type": "string" }
                  },
                  "required": ["color"]
                },
                "type": { "type": "string", "enum": ["border"] }
              },
              "required": ["value", "type"]
            }
          }
        }
      }
    },
    "genui": {
      "type": "object",
      "properties": {
        "input": {
          "type": "object",
          "properties": {
            "border": {
              "type": "object",
              "properties": {
                "active": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "object",
                      "properties": {
                        "color": { "type": "string" },
                        "width": { "type": "string" },
                        "style": { "type": "string" }
                      },
                      "required": ["color"]
                    },
                    "type": { "type": "string", "enum": ["border"] }
                  },
                  "required": ["value", "type"]
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
