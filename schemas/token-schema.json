{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Token Schema",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "fontSize": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "borderRadius": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9-]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "colors": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z0-9]+$": {
                  "type": "object",
                  "properties": {
                    "value": { "type": "string" },
                    "type": { "type": "string" }
                  },
                  "anyOf": [
                    { "required": ["value", "type"] },
                    { "additionalProperties": true }
                  ]
                }
              }
            }
          }
        },
        "shadows": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "fontFamily": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9-]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "fontWeight": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9-]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "lineHeight": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "letterSpacing": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "spacing": {
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        },
        "background": {
          "type": "object",
          "properties": {
            "blur": {
              "type": "object",
              "properties": {
                "value": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["value", "type"]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "input": { "type": "object" },
    "checkbox": { "type": "object" },
    "radio": { "type": "object" },
    "textarea": { "type": "object" },
    "card": { "type": "object" },
    "button": { "type": "object" },
    "divider": { "type": "object" },
    "cta": { "type": "object" },
    "modal": { "type": "object" }
  },
  "additionalProperties": false
}